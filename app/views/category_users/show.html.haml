= render "shared/header"

%nav{class: "nav-categories"}
  .categories-header-wrapper
    .categories-header-wrapper__button
      = @category.name


.contents-tweets-index
  .contents-wrapper
    .side-bar
      - if @category_user.user.image.present?
        = image_tag(@category_user.user.image.url, class: "side-bar__avatar")
      - else
        .side-bar__avatar-not
          %i{class: "fas fa-user-circle fa-8x my-gray"}
      .side-bar__info
        .side-bar__info__user-name
          = @category_user.user.nickname
        .side-bar__info__follows
          .side-bar__info__follows__follow
            フォロー数
            %p{class: "side-bar__info__follow__number"} 0
          .side-bar__info__follows__follow
            フォロワー数
            %p{class: "side-bar__info__follow__number"} 0
      .side-bar__goals
        - if @goal.present?
          .side-bar__goals__text
            %p{class: "side-bar__goals__text__null"}
              = simple_format(@goal.goal)

        - else
          .side-bar__goals__text
            目標は記入されていません

    %main{class: "tweets-wrapper"}
      - @tweets.each do |tweet|
        .tweets-wrapper__box
          .tweets-wrapper__box__head{id: "box-#{tweet.id}"}
            = link_to "" do
              - if current_user.image.present?
                = image_tag(tweet.user.image.url, class: "tweets-wrapper__box__head__avatar")
              - else
                .tweets-wrapper__box__head__avatar-not
                  %i{class: "fas fa-user-circle fa-3x my-gray"}
            =link_to "", class: "tweets-wrapper__box__head__user-name" do
              = tweet.user.nickname
            .tweets-wrapper__box__head__date
              = tweet.created_at
          .tweets-wrapper__box__tweet
            = tweet.text
          .tweets-wrapper__box__images
            - tweet.tweet_images.each do |tweet_images|
              = image_tag(tweet_images.image.url, class: "tweets-wrapper__box__images__ele")
