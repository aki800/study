= render "shared/header"
.contents-signup
  .signup-wrapper
    %h2{class: "signup-wrapper__heading"} 新規登録
    .signup-wrapper__forms
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          .field__label
            = f.label :ニックネーム
          %br/
          .field__text
            = f.text_field :nickname
        .field
          .field__label
            = f.label :メールアドレス
          %br/
          .field__text
            = f.email_field :email, autofocus: true, autocomplete: "email"
        .field
          .field__label
            = f.label :プロフィール画像
          %br/
          .field__text
            = f.file_field :image
        .field
          .field__label
            = f.label :パスワード
          %br/
          .field__text
            = f.password_field :password, autocomplete: "new-password", placeholder: "6字以上"
        .field
          .field__label
            = f.label :パスワード（確認）
          %br/
          .field__text
            = f.password_field :password_confirmation, autocomplete: "new-password"
        .actions
          = f.submit "登録する", class: "actions__button"
