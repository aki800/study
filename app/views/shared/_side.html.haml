.side-bar
  = link_to user_path(current_user) do
    - if current_user.image.present?
      = image_tag(current_user.image.url, class: "side-bar__avatar")
    - else
      .side-bar__avatar-not
        %i{class: "fas fa-user-circle fa-8x my-gray"}
  .side-bar__info
    =link_to user_path(current_user), class: "side-bar__info__user-name" do
      = current_user.nickname
    .side-bar__info__follows
      .side-bar__info__follows__follow
        フォロー数
        %p{class: "side-bar__info__follow__number"} 0
      .side-bar__info__follows__follow
        フォロワー数
        %p{class: "side-bar__info__follow__number"} 0

  %nav{class: "side-bar__nav"}
    - if controller.controller_name == 'users' && controller.action_name == 'show'
      = link_to user_path(current_user), class: "side-bar__nav__box emphasis" do
        %p{class: "side-bar__nav__box__text"}
          参加カテゴリー
    - else
      = link_to user_path(current_user), class: "side-bar__nav__box" do
        %p{class: "side-bar__nav__box__text"}
          参加カテゴリー

    - if controller.controller_name == 'registrations' && controller.action_name == 'edit'
      = link_to edit_user_registration_path, class: "side-bar__nav__box emphasis" do
        %p{class: "side-bar__nav__box__text"}
          プロフィール情報
    - else
      = link_to edit_user_registration_path, class: "side-bar__nav__box" do
        %p{class: "side-bar__nav__box__text"}
          プロフィール情報
